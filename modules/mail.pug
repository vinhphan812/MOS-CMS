html
    head
        style.
            body {
                margin: 0;
            }
            :root {
                font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
                font-size: 16px;
            }
            .dark {
                background-color: #2b2f31;
                color: #eee;
            }

            .dark a {
                background-color: #2b2f31;
                color: #eee;
            }

            .title {
                height: 100%;
                font-size: 2rem;
                font-weight: bold;
            }

            header,
            footer,
            .main {
                min-height: 30px;
                padding: 1rem 2rem;
            }

            .main {
                background-color: #ddd;
            }

            .body {
                background-color: #fff;
                height: 100%;
                width: 90%;
                margin: auto;
                padding: .5rem;
            }

            .text-center {
                text-align: center;
            }

            .margin-right {
                margin-right: .5rem;
            }

            .contact-icon {
                width: 24px;
                height: 24px;
            }

            .facebook {
                background-image: url("https://submit.vinhphancommunity.xyz/public/images/facebook.svg");
                background-repeat: no-repeat;
            }
